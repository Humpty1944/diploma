    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/king_black_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/king_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chess_king_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/queen_black_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/queen_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chess_queen_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rook_black_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/rook_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chess_rook_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bishop_black_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/bishop_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chess_bishop_black"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/knight_black_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/knight_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chess_kinght_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pawn_black_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/pawn_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chess_pawn_black" />
        </LinearLayout>
